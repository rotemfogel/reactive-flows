<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss} [%thread] [%logger{36}] [%-5level] %msg%n</pattern>
        </encoder>
    </appender>

<!--    <logger name="de.heikoseeberger.reactiveflows" level="DEBUG"/>-->
<!--    <logger name="Remoting" level="INFO"/>-->
<!--    <logger name="akka.remote.EndpointWriter" level="ERROR"/>-->
<!--    <logger name="akka.cluster.ClusterHeartbeatSender" level="ERROR"/>-->

    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
